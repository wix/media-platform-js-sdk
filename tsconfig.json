{
  "compilerOptions": {
    "declaration": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": [
    "./src/**/*",
    "./test/**/*.ts"
  ],
  "files": [
    "./src/external-types.d.ts",
    "./src/main.ts",
    "./browser.ts"
  ]
}
